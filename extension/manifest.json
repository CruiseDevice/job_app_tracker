{
  "manifest_version": 3,
  "name": "Smart Job Application Tracker",
  "version": "1.0.0",
  "description": "Automatically capture job postings and send them to job application tracker",
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Job Tracker"
  }
}